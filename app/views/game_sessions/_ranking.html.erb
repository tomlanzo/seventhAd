<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
    </tr>
  </thead>
  <tbody>
    <% players_ordered.each do |player| %>
      <tr>
        <th scope="row"><%= player.ranking %></th>
        <% if player.name? %>
          <td><%= player.name %></td>
        <% else %>
          <td>Inconnu</td>
        <% end  %>
      </tr>
    <tr>
    <% end %>
  </tbody>
</table>

