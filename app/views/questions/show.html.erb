<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h1>Question <%= @question.position%></h1>
      <h2><%= @question.title %></h2>
        <%= simple_form_for [@player, @question, @answer] do |f| %>
          <%= f.input :choice, as: :hidden, input_html: { value: '1' } %>
          <%= f.submit "A. #{@question.answer_1}", class: "btn btn-primary" %>
        <% end %>
        <%= simple_form_for [@player, @question, @answer] do |f| %>
          <%= f.input :choice, as: :hidden, input_html: { value: '2' } %>
          <%= f.submit "B. #{@question.answer_2}", class: "btn btn-primary" %>
        <% end %>
        <%= simple_form_for [@player, @question, @answer] do |f| %>
          <%= f.input :choice, as: :hidden, input_html: { value: '3' } %>
          <%= f.submit "C. #{@question.answer_3}", class: "btn btn-primary" %>
        <% end %>
        <%= simple_form_for [@player, @question, @answer] do |f| %>
          <%= f.input :choice, as: :hidden, input_html: { value: '4' } %>
          <%= f.submit "D. #{@question.answer_4}", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
